{
  "watch": ["dist/web/server.js", "dist/web/", "dist/utils/", "dist/core/"],
  "ext": "js,json",
  "ignore": [
    "accessibility-reports/*",
    "node_modules/*",
    "playwright-report/*",
    "test-results/*",
    "*.log"
  ],
  "exec": "node dist/web/server.js",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "1000"
} 