{
  "name": "accessability-scanning-tool",
  "version": "2.1.1",
  "description": "Professional automated accessibility testing solution with comprehensive WCAG 2.1 AAA compliance reports. Features Phase 2 service-based architecture, queue-based processing, intelligent caching, and enhanced performance monitoring.",
  "license": "ISC",
  "author": "Brad Reaney",
  "keywords": [
    "accessibility",
    "a11y",
    "wcag",
    "testing",
    "automation",
    "compliance",
    "audit",
    "axe-core",
    "pa11y",
    "playwright",
    "web-accessibility",
    "site-testing",
    "accessibility-reports"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nimbleapproach/Accessability-Scanning-Tool"
  },
  "homepage": "https://github.com/nimbleapproach/Accessability-Scanning-Tool#readme",
  "type": "commonjs",
  "main": "src/cli/accessibility-test-cli.ts",
  "bin": {
    "accessibility-test": "./src/cli/accessibility-test-cli.ts",
    "a11y-test": "./src/cli/accessibility-test-cli.ts"
  },
  "scripts": {
    "clean:reports": "/bin/rm -rf playwright/accessibility-reports/*-accessibility-report-*",
    "clean:cache": "/bin/rm -rf playwright/accessibility-reports/page-cache/",
    "clean:analysis": "/bin/rm -rf playwright/accessibility-reports/parallel-analysis/*",
    "clean:all": "npm run clean:reports && npm run clean:cache && npm run clean:analysis",
    "clean:browsers": "echo 'Browser cleanup now handled by Playwright automatically'",
    "system:cleanup": "npm run clean:browsers && npm run clean:all",
    "system:status": "ps aux | grep -E '(chrome|chromium|playwright|node)' | grep -v grep || echo 'No processes found'",
    "cli": "npx ts-node src/cli/accessibility-test-cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=__tests__",
    "test:unit:watch": "jest --testPathPattern=__tests__ --watch",
    "test:integration": "npx playwright test --reporter=line --project=chromium --output-dir=test-results/integration",
    "test:integration:report": "npx playwright show-report test-results/integration",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "version:patch": "npm run version:bump patch",
    "version:minor": "npm run version:bump minor",
    "version:major": "npm run version:bump major",
    "version:bump": "node scripts/version-bump.js",
    "version:validate": "node scripts/validate-versions.js",
    "changelog:add": "node scripts/changelog-add.js",
    "prepare": "node scripts/prepare-release.js",
    "precommit": "node scripts/pre-commit-hook.js",
    "setup:hooks": "echo 'node scripts/pre-commit-hook.js' > .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit",
    "code:check": "npm run typecheck && npm run lint && npm run format:check",
    "code:fix": "npm run typecheck && npm run lint:fix && npm run format"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.2",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.53.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.12",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "axe-core": "^4.8.2",
    "axios": "^1.6.2",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-prettier": "^5.5.1",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lighthouse": "^12.7.1",
    "lint-staged": "^16.1.2",
    "node-fetch": "^3.3.2",
    "pa11y": "^9.0.0",
    "playwright-lighthouse": "^4.0.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.27.5"
  }
}
