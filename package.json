{
  "name": "accessability-scanning-tool",
  "version": "2.1.1",
  "description": "Professional automated accessibility testing solution with comprehensive WCAG 2.1 AAA compliance reports. Features modern web interface and core accessibility testing functionality.",
  "license": "ISC",
  "author": "Brad Reaney",
  "keywords": [
    "accessibility",
    "a11y",
    "wcag",
    "testing",
    "automation",
    "compliance",
    "audit",
    "axe-core",
    "pa11y",
    "playwright",
    "web-accessibility",
    "site-testing",
    "accessibility-reports",
    "web-interface",
    "express",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nimbleapproach/Accessability-Scanning-Tool"
  },
  "homepage": "https://github.com/nimbleapproach/Accessability-Scanning-Tool#readme",
  "type": "commonjs",
  "main": "src/web/server.ts",
  "scripts": {
    "clean": "rimraf accessibility-reports/*-accessibility-report-* accessibility-reports/page-cache/ accessibility-reports/parallel-analysis/ dist",
    "system:status": "ps aux | grep -E '(chrome|chromium|playwright|node)' | grep -v grep || echo 'No processes found'",
    "build": "tsc && tsc-alias -p tsconfig.json && npm run copy-public",
    "copy-public": "cp -r src/public dist/",
    "start": "node dist/web/server.js",
    "dev": "concurrently \"tsc -w\" \"nodemon --exec 'npx tsc-alias -p tsconfig.json && node' dist/web/server.js\"",
    "dev:setup": "node scripts/dev-setup.js",
    "dev:build": "tsc && tsc-alias -p tsconfig.json && npm run copy-public && npm run dev",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:services": "jest --testPathPattern=services",
    "docs:check": "node scripts/update-docs.js check",
    "docs:analyze": "node scripts/update-docs.js analyze",
    "docs:validate": "node scripts/update-docs.js validate",
    "docs:all": "node scripts/update-docs.js all",
    "docs:help": "node scripts/update-docs.js help"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.9.1",
    "@playwright/test": "^1.46.1",
    "axe-core": "^4.9.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "pa11y": "^7.0.0",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/pa11y": "^5.3.7",
    "@types/jest": "^29.5.12",
    "concurrently": "^9.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.1.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.5.4"
  }
}
