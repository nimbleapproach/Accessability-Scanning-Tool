{
  "name": "accessibility-scanning-tool",
  "version": "2.1.1",
  "description": "Professional automated accessibility testing solution with comprehensive WCAG 2.1 AAA compliance reports. Features modern web interface and core accessibility testing functionality.",
  "license": "ISC",
  "author": "Brad Reaney",
  "keywords": [
    "accessibility",
    "a11y",
    "wcag",
    "testing",
    "automation",
    "compliance",
    "audit",
    "axe-core",
    "pa11y",
    "playwright",
    "web-accessibility",
    "site-testing",
    "accessibility-reports",
    "web-interface",
    "express",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nimbleapproach/Accessability-Scanning-Tool"
  },
  "homepage": "https://github.com/nimbleapproach/Accessability-Scanning-Tool#readme",
  "type": "commonjs",
  "main": "src/web/server.ts",
  "scripts": {
    "clean": "rimraf accessibility-reports/*-accessibility-report-* accessibility-reports/page-cache/ accessibility-reports/parallel-analysis/ dist",
    "system:status": "ps aux | grep -E '(chrome|chromium|playwright|node)' | grep -v grep || echo 'No processes found'",
    "build": "npm run clean && tsc && tsc-alias -p tsconfig.json && npm run copy-public",
    "copy-public": "node scripts/copy-public.js",
    "start": "node dist/web/server.js",
    "dev": "concurrently \"tsc -w\" \"nodemon --exec 'npx tsc-alias -p tsconfig.json && node' dist/web/server.js\"",
    "dev:setup": "node scripts/dev-setup.js",
    "dev:setup:mongodb": "node scripts/dev-setup.js --mongodb",
    "dev:build": "tsc && tsc-alias -p tsconfig.json && npm run copy-public && npm run dev",
    "dev:start": "node scripts/start-dev.js start",
    "dev:mongodb-only": "node scripts/start-dev.js mongodb-only",
    "secrets:generate": "node scripts/generate-secrets.js generate",
    "validate:env": "node scripts/validate-env.js validate",
    "mongodb:start": "docker-compose up -d",
    "mongodb:stop": "docker-compose down",
    "mongodb:reset": "docker-compose down -v && docker-compose up -d",
    "mongodb:status": "docker-compose ps",
    "mongodb:logs": "docker-compose logs",
    "mongodb:env": "node scripts/mongodb-setup.js env",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "dev:check": "node scripts/check-dev-server.js",
    "docs:validate": "node scripts/update-docs.js validate",
    "docs:all": "node scripts/update-docs.js all"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.9.1",
    "@mongodb-js/saslprep": "^1.3.0",
    "@playwright/test": "^1.46.1",
    "axe-core": "^4.9.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "mongodb": "^6.17.0",
    "pa11y": "^9.0.0",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/events": "^3.0.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.1.0",
    "@types/pa11y": "^5.3.7",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.3",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
